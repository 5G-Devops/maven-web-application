@Library('jenkins-library') _

pipeline{
    agent any
    tools{
        maven'maven3.9.8'
    }
    parameters{
        choice(name: 'action',choices: 'create/destroy',description:'choose create/destory')
    }
    stages{
        stage('GitCheckOut'){
            when { expression { params.action == 'create' } }
            steps{
             git credentialsId: 'bfae41d1-3a6d-4f7e-a346-0018f6d1cd56', url: 'https://github.com/5G-Devops/maven-web-application.git'   
            }
        }
        stage('UnitTest'){
            when { expression { params.action == 'create' } }
            steps{
                unittest()
                }
            }
        stage('mvnIntegrationTest'){
            when { expression { params.action == 'create' } }
            steps{
              mvnintegrationTest()
            }

        }
        }
    }
